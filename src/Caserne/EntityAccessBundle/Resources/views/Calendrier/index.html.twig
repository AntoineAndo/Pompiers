{% extends 'PompierBundle::layout.html.twig' %}

{% block main -%}
    <h1>{{ entityName }} list</h1>
    <table class="table table-striped records_list">
        <thead>
        <tr>
            {% for fieldname in fieldnames %}
                {% if fieldname != "slug" %}
                    <th>{{ fieldname }}</th>
                {% endif %}
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr id="{{ entity.slug }}">
                {% for fieldname in fieldnames %}
                    {% if fieldname != "slug" %}
                        <td class="td">{{ attribute(entity, fieldname) }}</td>
                    {% endif %}

                {% endfor %}
                <td role="navigation">
                    <ul class="quick-actions">
                        <li>
                            <a class="btn btn-default btn-lg" aria-label="show"
                               href="{{ path('calendrier_show', {'entity' : entityName,
                                   'slug' : entity.slug }) }}">
                                <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <li>
        <a href="{{ path('caserne_entityaccess_postrouteur_new', { 'entity' : entityName }) }}">
            Create a new entry
        </a>
    </li>
    <br>
    <h3>Search</h3>
    <li>
        {{ form(search_form, {'attr': {'id': 'searchForm'}}) }}
    </li>
{% endblock %}